<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumsquareroundeb"
        android:text="배경 색상 설정"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nanumsquareroundb"
        android:gravity="center"
        android:text="메모 배경 색상을 선택하세요.\n미선택 시 햐안색으로 설정됩니다."
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSetRed"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="red"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/color_icon"
            app:tint="@color/pastel_red" />

        <ImageView
            android:id="@+id/ivSetYellow"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:contentDescription="yellow"
            app:srcCompat="@drawable/color_icon"
            app:tint="@color/pastel_yellow" />

        <ImageView
            android:id="@+id/ivSetGreen"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:contentDescription="green"
            app:srcCompat="@drawable/color_icon"
            app:tint="@color/pastel_green" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSetBlue"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:contentDescription="blue"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/color_icon"
            app:tint="@color/pastel_blue" />

        <ImageView
            android:id="@+id/ivSetPurple"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:contentDescription="purple"
            app:srcCompat="@drawable/color_icon"
            app:tint="@color/pastel_purple" />

        <ImageView
            android:id="@+id/ivSetPink"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:contentDescription="pink"
            app:srcCompat="@drawable/color_icon"
            app:tint="@color/pastel_pink" />

    </LinearLayout>


</LinearLayout>