<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llWidgetWeekly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nanumsquareroundeb"
        android:text="WEEKLY"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWidgetWeeklyDate"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:drawablePadding="3dp"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/nanumsquareroundr"
        android:foregroundGravity="center"
        android:gravity="center|center_vertical"
        android:inputType="date"
        android:text="날짜"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/select_weather" />

            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_thr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_tue"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                app:srcCompat="@drawable/select_weather" />
            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_mon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_wed"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                app:srcCompat="@drawable/select_weather" />
            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_fri"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_thr"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                app:srcCompat="@drawable/select_weather" />
            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_sun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_fri"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                app:srcCompat="@drawable/select_weather" />
            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_sat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_sat"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                app:srcCompat="@drawable/select_weather" />
            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_tue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWidgetWeeklyWeather_sun"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                app:srcCompat="@drawable/select_weather" />
            <ImageView
                android:id="@+id/ivWidgetWeeklyMoodPic_wed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/select_emoji" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>