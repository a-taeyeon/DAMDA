<?xml version="1.0" encoding="utf-8"?>
<app:io.sulek.ssml.SimpleSwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="5dp"
    app:dynamicMenuWidth="false"
    app:menuSide="Right"
    tools:ignore="MissingClass">

    <LinearLayout
        android:id="@+id/backgroundContainer"
        android:orientation="horizontal"
        android:background="#BBBBBB"
        android:layout_width="200dp"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/btnSwipeBkmr"
            android:background="#FFC107"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="OnClick">

            <ImageView
                android:src="@drawable/bkmr_checked"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnSwipeDelete"
            android:layout_gravity="center"
            android:background="#FF3E3E"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="OnClick">

            <ImageView
                android:src="@drawable/delete"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </LinearLayout>

<!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="50dp"-->
<!--    android:layout_marginBottom="5dp">-->


    <LinearLayout
        android:id="@+id/adapterMainMemo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/ck_mainMemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tvMemoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="clip_vertical"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvMemoTypeNDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquareroundr"
            android:gravity="end"
            android:text="WishList 2020.03.08"
            android:textColor="#000000" />

    </LinearLayout>

<!--</androidx.constraintlayout.widget.ConstraintLayout>-->
</app:io.sulek.ssml.SimpleSwipeMenuLayout>