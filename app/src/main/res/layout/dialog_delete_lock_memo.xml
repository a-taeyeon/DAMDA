<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAF9F1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nanumsquareroundb"
        android:lineSpacingExtra="5sp"
        android:text="잠금된 메모가 포함되어있습니다.\n삭제하려면 암호를 입력하십시오."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/btnDelConfirm"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_delconfirm"
            android:fontFamily="@font/nanumsquareroundb" />

        <Button
            android:id="@+id/btnDelCancel"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_delcancel"
            android:fontFamily="@font/nanumsquareroundb" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>