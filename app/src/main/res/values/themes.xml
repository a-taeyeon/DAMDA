<resources>
    <!-- Base application theme. -->
    <style name="Theme.DAMDA" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#97B1C8</item>
        <item name="colorPrimaryDark">#97B1C8</item>
        <item name="colorPrimary">#97B1C8</item>
        <item name="colorControlHighlight">#97B1C8</item>
        <item name="colorPrimaryVariant">#97B1C8</item>
        <item name="colorOnPrimary">#97B1C8</item>
        <item name="android:fontFamily">@font/nanumsquareroundb</item>
    </style>

    <style name="EditTextPasswordStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#97B1C8</item>
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <style name="Theme.DAMDA.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.DAMDA.AppWidgetContainer" parent="Theme.DAMDA.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>